.product-section {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 1rem;
}

.product-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 50px;
  align-items: flex-start;
  width: 100%;
}

.product-gallery {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.gallery-container {
  display: grid;
  align-items: center;
  column-gap: 20px;
  row-gap: 5px;
  grid-template-columns: auto 1fr;
}

.thumbnail {
  scroll-snap-align: start;
  object-fit: cover;
  width: 100px;
  height: 100px;
  border-radius: 3px;
  cursor: pointer;
  user-select: none;
  transition: opacity 0.2s ease-in-out;
}

.thumbnail:hover {
  opacity: 0.7;
}

.product-image {
  flex: 1;
  width: 100%;
  height: auto;
}

.button-row {
  display: flex;
  justify-content: center;
}

.image-buttons a{
  text-decoration: none;
  font-weight: 800;
}

.arrow-right {
  width: 14px;
  height: auto;
}

.arrow-left {
  width: 14px;
  height: auto;
  transform: scaleX(-1);
}

.image-buttons {
  display: flex;
  flex-direction: row;
  gap: 20px;
}

.product-details {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  width: 475px;
  height: 275px;
  box-shadow: 0px 3px 20px #00000029;
  border: 1px solid #D5D5D5;
  border-radius: 5px;
  align-self: center;
}

.details-container {
  padding: 5% 5% 5% 5%;
  justify-content: space-between;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.product-name-row {
  font-weight: 700;
  font-size: var(--font-size-heading);
}

.product-description-row {
  line-height: 1.5;
  font-size: var(--font-size-base);
}

.product-price-row ul {
  display: flex;
  gap: 1rem;
  list-style: none;
  padding: 0;
  margin: 0;
  align-items: baseline;
}

.product-old-price {
  font-size: var(--font-size-base);
  font-weight: bold;
  text-decoration: line-through;
  color: #000000;
}

.product-new-price {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: #1e40ff; 
}

.product-price-info {
  font-size: 10px;
  color: #555;
}

.product-availability-row {
  font-size: 1rem;
  color: var(--success-color);
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.add-to-cart-row {
  margin-top: 1rem;
}

.add-to-cart-row button {
  padding: 0.75rem 1.5rem;
  background-color: #1e40ff;
  color: white;
  font-size: 20px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  width: 100%;
  transition: background-color 0.2s ease-in-out;
}

.add-to-cart-row button:hover {
  background-color: var(--primary-color-hover);
}

.details-text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex-grow: 1;
}

.product-benefits {
  display: flex;
  flex-direction: row;
  flex: 1;
  margin-top: 80px;
  justify-content: space-between;
}

.benefit-item {
  display: flex;
  flex-direction: row;
}

.benefits-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20px;
  gap: 5px;
}

.column {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
}

.j-center {
  justify-content: center;
}

.j-start {
  justify-content: start;
}

#gallery {
  gap: 20px
}

.d-contents {
  display: contents;
}

.benefit-headline {
  font-weight: 600;              
  font-size: var(--font-size-base);
  line-height: 22px;
  font-style: normal;
  opacity: 0.7;
}

.benefit-text{
  font-weight: 500;             
  font-size: var(--font-size-base);
  line-height: 22px;
  font-style: normal;
}

.benefit-color {
  color: var(--text-muted);
}

.inactive {
  opacity: 0.3;
}

.thumbnail-scrollable {
  max-height: 440px;
  display: flex;               
  overflow-y: auto;            
  padding: 0;                  
  margin: 0;
  justify-content: start;
  box-sizing: content-box;     
  scroll-behavior: smooth;
  scroll-snap-type: y mandatory;
}

.thumbnail-scrollable .thumbnail {
  scroll-snap-align: start;
}

.thumbnail-scrollable::-webkit-scrollbar {
  display: none; 
}

.thumbnail-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding: 0;
  margin: 0;
  user-select: none;
}

.thumbnail.non-clickable {
  pointer-events: none;
  opacity: 0.5;
  filter: grayscale(40%);
  cursor: default;
}

.thumbnail-scrollable,
.thumbnail-scrollable * {
  user-select: none;
  -webkit-user-drag: none;
}

.image-fade-wrapper {
  position: relative;
  width: 480px;
  height: 480px;
}

.product-focused-image,
.product-focused-image2 {
  height: 100%;
  width: 100%;
  object-fit: contain;
  border-radius: 5px;
  position: absolute;
  top: 0;
  left: 0;
  transition: opacity 0.5s ease;
}

.product-focused-image {
  z-index: 1;
}

.product-focused-image2 {
  z-index: 2;
}

#fadeA, #fadeB {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  opacity: 0;
  z-index: 1;
  transition: opacity 0.3s ease-in-out;
}

